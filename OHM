import streamlit as st

st.set_page_config(page_title="Prawo Ohma – symulacja", layout="centered")

st.title("⚡ PRAWO OHMA dla prądu stałego")
st.markdown("Interaktywna symulacja prawa Ohma")

U = st.slider("Napięcie U [V]", 0.0, 50.0, 20.0, step=0.5)
R = st.slider("Opór R [Ω]", 1.0, 500.0, 150.0, step=1.0)

I = U / R

st.divider()

st.subheader("Wynik pomiaru")
st.write(f"**Natężenie prądu I = {I:.3f} A**")

st.markdown("""
### Prawo Ohma
\\[
I = \\frac{U}{R}
\\]
""")
